.credit-container
  .credit-container--upper
    %h2 
      クレジットカード情報入力
  .credit-container-lower
    .form
      .form__card
        .form__card--upper
          %p 
            カード番号
          %span
            必須
        .form__card--center
          %input{placeholder: "半角数字のみ"}  
        .form__card--lowner
          -# = image_tag "cards.png", width:"240"
      .form__expiration-date
        .form__expiration-date--upper
          %p
            有効期限
          %span 
            必須
        .form__expiration-date--lower
          .select_month 
            %select{name: "month"}>
              %option{value:""}-
              %option{value:"1"} 1
              %option{value:"2"} 2
              %option{value:"3"} 3
              %option{value:"4"} 4
              %option{value:"5"} 5
              %option{value:"6"} 6
              %option{value:"7"} 7
              %option{value:"8"} 8
              %option{value:"9"} 9
              %option{value:"10"} 10
              %option{value:"11"} 11
              %option{value:"12"} 12
            月
          .select_year
            %select{value: "year"}>
              %option{value:""}-
              %option{value:"19"} 19
              %option{value:"20"} 20
              %option{value:"21"} 21
              %option{value:"22"} 22
              %option{value:"23"} 23
              %option{value:"24"} 24
              %option{value:"25"} 25
              %option{value:"26"} 26
              %option{value:"27"} 27
              %option{value:"28"} 28
              %option{value:"29"} 29
              %option{value:"30"} 30
            年
      .form__security-code
        .form__security-code--upper
          %p 
            セキュリティコード
          %span
            必須
        .form__security-code--center
          %input{placeholder:"カード背面4桁もしくは3桁の番号"}
        .form__security-code--lower
          %span 
            %i.fa.fa-question-circle
          %p 
            カード背面の番号とは？
      .form__button   
        %p
          追加する