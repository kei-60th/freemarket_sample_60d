%html
%head
  %title メルカリ
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  = csrf_meta_tags
  = csp_meta_tag
%body
  .wrapper
    .header
      .logo
        =link_to "/", class: 'mercarilogo' do
          = image_tag 'mercarilogo.svg'
      .right-contents
        .list.list--active
          会員情報
          .progress-status
            .left-bar.left-bar--initial
            .point.point--active
            .right-bar
        .list
          電話番号認証
          .progress-status
            .left-bar
            .point
            .right-bar
        .list
          お届け先住所入力
          .progress-status
            .left-bar
            .point
            .right-bar
        .list
          支払い方法
          .progress-status
            .left-bar
            .point
            .right-bar
        .list
          完了
          .progress-status
            .left-bar
            .point
            .right-bar.right-bar--final
    .contents
      = yield
    .g_footer
      %ul.links
        %li
          =link_to "/", class: 'links__link-bottom' do
            プライバシーポリシー
        %li
          =link_to "/", class: 'links__link-bottom' do
            メルカリ利用規約
        %li
          =link_to "/", class: 'links__link-bottom' do
            特定商取引に関する表記
      =link_to "/" do
        = image_tag 'mercarilogo-gray.svg'