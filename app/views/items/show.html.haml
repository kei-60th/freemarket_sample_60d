.wrapper
  .kheader
    .kheader__menu
      = image_tag "mercarilogo.svg", class: "img"
      %input.form-contol.seach-input{name: "keyword", class: "search_icon",placeholder: "何かお探しですか？"}
      -# %i.fa.fa-search
    .navmenu
      %ul.navmenu__leftside-bar
        %li.fa.fa-list
        =link_to  'カテゴリーから探す'
        %li.fa.fa-tags
        =link_to  'ブランドから探す'
      %ul.navmenu__rightside-bar
        -# ----ログイン後のアイコン----
        %li.fa.fa-heart
        =link_to  'いいね！一覧'
        %li.fa.fa-bell
        =link_to 'お知らせ'
        %li.fa.fa-check
        =link_to 'やることリスト'
        %li.fa.smile
        =link_to 'マイページ'
        -# %li.sign_up 新規会員登録
        -# %li.log_in ログイン

  .item-deteal
    .item-deteal__box
      %h1.item-deteal__box__title
        = @item.name
      .item-deteal__box__item
        .item-deteal__box__item__left
          .left-top
            = image_tag @item.item_images[0].image.url
          .left-bottom
            .left-bottom__array
              = image_tag @item.item_images[0].image.url
              .left-bottom__array__box
                = image_tag @item.item_images[0].image.url

        %table.item-detail-table
          %tbody
            %tr
              %th 出品者
              %td.td-box
                = link_to "#", class: "link-blue" do
                  メルカリ太郎
                  -# = @item.nickname
                .yyy.icon-top
                  .item-user-ratings
                    = fa_icon 'smile-o', {class: "good-icons--pink"}
                    %span 20
                  .item-user-ratings.icon-margin
                    = fa_icon 'meh-o', {class: "good-icons--orange"}
                    %span 0
                  .item-user-ratings.icon-margin
                    = fa_icon 'frown-o', {class: "good-icons--blue"}
                    %span 0
            %tr
              %th カテゴリー
              %td.td-box
                -# - if @item.category.parent_id.name
                  = link_to "#", class: "link-blue" do
                    %div
                      = @item.categories.parent_id.name #親
                = link_to "#" do
                  .item-detail-table-sub-category{class: "link-blue"}
                    %i.icon-arrow-right
                    -# = "＞" + @item.categories.parent_id.name        #子
                = link_to "#" do
                  .item-detail-table-sub-sub-category{class: "link-blue"}
                    %i.icon-arrow-right
                    -# = "＞" + @item.categories.name               #孫
            -# - if @item.brand
              %tr
                %th ブランド
                %td.td-box
                  %a{href: "#", class: "link-blue"}
                    %div
                      = @item.brands.name
            -# - if @item.sizes
              %tr
                %th 商品のサイズ
                %td.td-box
                  = @item.sizes.size
            %tr
              %th 商品の状態
              %td.td-box
                = @item.condition
            %tr
              %th 配送料の負担
              %td.td-box
                -# = @item.fee
            %tr
              %th 配送の方法
              %td.td-box
                -# = @item.way
            %tr
              %th 配送元地域
              %td.td-box
                %a{href: "#", class: "link-blue"}
                  -# = @item.prefecture.name
            %tr
              %th 発送日の目安
              %td.td-box
                -# = @item.date

      -# - if @item.user != current_user
        .item-deteal__box__price
          %span.oooo
            ¥
            = @item.price.to_s(:delimited)
          %span.rrrr
            （税込）
          %span.wwww
            = @item.burden.parent.name.sub(/（出品者負担）/,"").sub(/（購入者負担）/,"")
        - if @item.transact.buyer_id
          = link_to "#", class:'sale', style: "background-color: grey;"do
            売り切れました
        - else
          = link_to "/items/create/#{@item.id}", class:'sale'do
            購入画面に進む
        .item-deteal__box__description
          %p.item-deteal__box__description__idjs
            = @items.description
      - else
        .item-deteal__box__price
          %span.oooo
            ¥
            = @item.price.to_s(:delimited)
          %span.rrrr
            （税込）
          %span.wwww
            = @item.burden.parent.name.sub(/（出品者負担）/,"").sub(/（購入者負担）/,"")
        .item-deteal__box__description
          %p.item-deteal__box__description__idjs
            = @item.description
        - if @item.transact.buyer_id
          = link_to edit_item_path(@item.id), class:'sale--edit-grey'do
            商品が購入されました。発送してください。
        - else
          = link_to edit_item_path(@item.id), class:'sale--edit' do
            商品の編集
          = link_to "この商品を削除する", "/items/#{@item.id}", method: :delete, data: { confirm: "確認\n削除すると二度と復活できません\n本当に削除しますか？" }, class: 'sale--edit-grey'

      .item-button-container.clearfix
        .item-button-left
          %button.item-button.item-button-like
            %i.icon-like-border
            = fa_icon 'heart', {class: "icon-good"}
            %span いいね!
            %span.fade-in-bottom{"data-num" => "like"} 3

          .item-button-report
            = fa_icon 'flag', {class: "icon-bad"}
            %span 不適切な商品の報告
          %input{:name => "like_add_url", :type => "hidden", :value => "#"}/
          %input{:name => "like_del_url", :type => "hidden", :value => "#"}/
          %input{:name => "__csrf_value", :type => "hidden", :value => "#"}/
        .item-button-right
          = link_to '#', target: '_blank' do
            %i.icon-lock
            = fa_icon 'lock', {class: ".icon-lock"}
            %span あんしん・あんぜんへの取り組み

    .message-container
      .message-contents
        .message-container__contents__form
          %p 相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
          %textarea.textarea-default
          %button.btn-default
            %submit コメントする


  .advertisement
    .advertisement__list
      .advertisement__list__left
        %h2 スマホでかんたんフリマアプリ
        %p 今すぐ無料ダウンロード！
        = image_tag "mercari_icon.png", class: "mercari_icon"
        = image_tag "app-storeicon.svg", class: "app-storeicon"
        = image_tag "google-storeicon.svg", class: "google-storeicon"

      .advertisement__list__right
        = image_tag "smartphonepic.png",class: "smartphonepic"

  = render 'shared/footer'