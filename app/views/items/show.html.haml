  .item-deteal
    .item-deteal__box
      %h1.item-deteal__box__title
        = @item.items.name
      .item-deteal__box__item
        .item-deteal__box__item__left
          .left__top

            = image_tag @item.image[0].image.url, alt: '', class: 'slide__box__image3'
          .left__down
            .left__down__iir
              - @image.each_with_index do |image, index|
                .left__down__iir__gffk
                  = image_tag image.image.url, alt: '', class: 'left__down__iir__gffk__image'
        %table.item-detail-table
          %tbody
            %tr
              %th 出品者
              %td.td-padding
                = link_to "#", class: "kiyaku--bule-underline" do
                  = @item.users.nickname
                .yyy.icon-top
                  .item-user-ratings
                    = fa_icon 'smile-o', {class: "good-icons--pink"}
                    %span 20
                  .item-user-ratings.icon-margin
                    = fa_icon 'meh-o', {class: "good-icons--orange"}
                    %span 0
                  .item-user-ratings.icon-margin
                    = fa_icon 'frown-o', {class: "good-icons--blue"}
                    %span 0
            %tr
              %th カテゴリー
              %td.td-padding
                - if @item.category.parent.parent
                  = link_to "#", class: "kiyaku--bule-underline" do
                    %div
                      = @item.categories.parent_id.name #親
                = link_to "#" do
                  .item-detail-table-sub-category{class: "kiyaku--bule-underline"}
                    %i.icon-arrow-right
                    = "＞" + @item.categories.parent_id.name        #子
                = link_to "#" do
                  .item-detail-table-sub-sub-category{class: "kiyaku--bule-underline"}
                    %i.icon-arrow-right
                    = "＞" + @item.categories.name               #孫
            - if @item.brand
              %tr
                %th ブランド
                %td.td-padding
                  %a{href: "#", class: "kiyaku--bule-underline"}
                    %div
                      = @item.brands.name
            - if @item.sizes
              %tr
                %th 商品のサイズ
                %td.td-padding
                  = @item.sizes.size
            %tr
              %th 商品の状態
              %td.td-padding
                = @item.conditions.condition
            %tr
              %th 配送料の負担
              %td.td-padding
                = @item.delivery_fees.fee
            %tr
              %th 配送の方法
              %td.td-padding
                = @item.delivery_ways.way
            %tr
              %th 配送元地域
              %td.td-padding
                %a{href: "#", class: "kiyaku--bule-underline"}
                  = @item.prefecture.name
            %tr
              %th 発送日の目安
              %td.td-padding
                = @item.delivery_dates.date

      - if @item.users != current_user
        .item-deteal__box__price
          %span.oooo
            ¥
            = @item.items.price.to_s(:delimited)
          %span.rrrr
            （税込）
          %span.wwww
            = @item.burden.parent.name.sub(/（出品者負担）/,"").sub(/（購入者負担）/,"")
        - if @item.transact.buyer_id
          = link_to "#", class:'kkooko', style: "background-color: grey;"do
            売り切れました
        - else
          = link_to "/items/buy/#{@item.id}", class:'kkooko'do
            購入画面に進む
        .item-deteal__box__description
          %p.item-deteal__box__description__idjs
            = @items.description
      - else
        .item-deteal__box__price
          %span.oooo
            ¥
            = @item.items.price.to_s(:delimited)
          %span.rrrr
            （税込）
          %span.wwww
            = @item.burden.parent.name.sub(/（出品者負担）/,"").sub(/（購入者負担）/,"")
        .item-deteal__box__description
          %p.item-deteal__box__description__idjs
            = @item.description
        - if @item.transact.buyer_id
          = link_to edit_item_path(@item.id), class:'kkooko--edit-grey'do
            商品が購入されました。発送してください。
        - else
          = link_to edit_item_path(@item.id), class:'kkooko--edit' do
            商品の編集
          = link_to "この商品を削除する", "/items/#{@item.id}", method: :delete, data: { confirm: "確認\n削除すると二度と復活できません\n本当に削除しますか？" }, class: 'kkooko--edit-grey'

      .item-button-container.clearfix
        .item-button-left
          %button.item-button.item-button-like{"data-ga" => "element", "data-ga-category" => "LIKE", "data-ga-label" => "like!", "data-id" => "m38799137224", "data-toggle" => "like", :name => "like!", :type => "button"}
            %i.icon-like-border
            = fa_icon 'heart', {class: "icon-good"}
            %span いいね!
            %span.fade-in-down{"data-num" => "like"} 3

          .item-button-report
            = fa_icon 'flag', {class: "icon-bad"}
            %span 不適切な商品の報告
          %input{:name => "like_add_url", :type => "hidden", :value => "#"}/
          %input{:name => "like_del_url", :type => "hidden", :value => "#"}/
          %input{:name => "__csrf_value", :type => "hidden", :value => "#"}/
        .item-button-right
          = link_to '#', target: '_blank' do
            %i.icon-lock
            = fa_icon 'lock', {class: ".icon-lock"}
            %span あんしん・あんぜんへの取り組み

    .message-container
      .message-contents
